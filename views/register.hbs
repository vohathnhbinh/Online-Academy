<div class="row justify-content-md-center" style="margin-top: 30px">
    <div class="col-md-4">
        {{#if fail}}
            {{#each errors}}
            <div class="alert alert-warning" role="alert">
                {{this.msg}}
            </div>
            {{/each}}
        {{/if}}
        <form action="/register" method="post" name="frmRegister" id="frmRegister">
                <div class="form-group">
                    <label for="username">Username</label>
                    <input type="text" class="form-control" id="username" name="username" required autofocus placeholder="Must have at least 6 characters" value="{{username}}">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required value="{{email}}">
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required placeholder="Must have at least 6 characters">
                </div>
                <div class="form-group">
                    <label for="repassword">Confirm password</label>
                    <input type="password" class="form-control" id="repassword" name="repassword" required placeholder="Please re-enter your password">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>